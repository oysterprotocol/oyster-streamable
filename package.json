{
  "name": "oyster-streamable",
  "version": "0.0.1",
  "description": "Arbitrary size interface for the Oyster network",
  "main": "build/index.js",
  "files": [
    "build/index.js"
  ],
  "browser": "dist/oyster-streamable.js",
  "author": "Marcel Lindig <ml@nullpilot.de>",
  "license": "MIT",
  "scripts": {
    "build": "babel src --presets babel-preset-env --out-dir build",
    "bundle": "webpack",
    "prepublish": "yarn build",
    "pretty": "prettier --write \"src/**/*.js\"",
    "test": "jest",
    "test:watch": "jest --watch --colors"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn pretty"
    }
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "build",
      "dist"
    ]
  },
  "dependencies": {
    "axios": "^0.18.0",
    "datamap-generator": "git+https://github.com/oysterprotocol/datamap-generator.git",
    "iota.lib.js": "^0.4.7",
    "mime": "^2.3.1",
    "node-forge": "^0.7.5",
    "readable-stream": "^2.3.6"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-jest": "^23.0.1",
    "babel-loader": "^7.1.5",
    "babel-preset-env": "^1.7.0",
    "husky": "^1.0.0-rc.9",
    "jest": "^23.1.0",
    "prettier": "^1.13.5",
    "regenerator-runtime": "^0.11.1",
    "webpack": "^4.16.5",
    "webpack-bundle-analyzer": "^2.13.1",
    "webpack-cli": "^3.1.0"
  }
}
